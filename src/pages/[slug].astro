---
import MainLayout from '../layouts/MainLayout.astro';
import '../styles/global.css';

export async function getStaticPaths() {
  const news = await Astro.glob('../content/news/*.md')

  return news.map(post => ({
    params: { 
      slug: post.frontmatter.slug,
    },
    props: {
      post,
    },
  }))
}

const { Content, frontmatter } = Astro.props.post
const { title, date, slug, description } = frontmatter;
---

<MainLayout title={title}>
  <div class="max-w-screen-xl w-full mx-auto py-10">
    <h1 class="text-gray-900 font-bold text-5xl mb-10">{title}</h1>
      <article class="
            prose lg:prose-lg 
            prose-h1:font-bold prose-h1:text-4xl prose-h1:mb-2
            prose-h2:font-bold prose-h2:text-3xl prose-h2:mb-2
            prose-h3:font-bold prose-h3:text-2xl prose-h3:mb-2
            prose-a:font-medium prose-a:text-blue-600 prose-a:no-underline hover:prose-a:underline
            prose-p:mb-4 prose-p:text-lg
      ">
        <Content />
      </article>

  </div>
</MainLayout>
